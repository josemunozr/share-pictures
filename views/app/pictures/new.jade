extends ../../layout.jade
block contenido
  .row.center-xs.middle-xs.full-height
    .col-xs-6
      .box
        h1 Subir Imagen
        form(action="/app/pictures", method="POST", class="text-left", enctype="multipart/form-data")
          .form-group
            label(form="title") Título
            input(type="text", name="title",placeholder="Título",id="title",class="form-control")
          .form-group
            label(form="file") Imagen
            input(type="file", name="file",placeholder="Password",id="file",class="form-control")
          .row
            .col-xs-6
              input(type="submit", value="Subir", class="btn btn-info")
